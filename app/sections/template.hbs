<div class="container">
  <div class="row">
    <div class="col-xs-4 content">

      {{#each content as |section|}}
        {{x-section section=section currentSection=currentSection action="moveMap"}}
      {{/each}}

      <button {{action "createSection"}} class="btn btn-success">Create</button>
    </div>

    {{outlet}}
  </div>
</div>

<div id="map-container">
  {{google-map
    lat=currentSection.lat
    lng=currentSection.long
    zoom=currentSection.zoom
    gopt_mapTypeControl=false
    gopt_style=styles
    gopt_zoomControl=false
    gopt_backgroundColor='transparent'}}
</div>
