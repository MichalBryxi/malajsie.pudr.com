<div class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1 content">
      <h2>
        {{fa-icon "circle"}}
        {{content.title}}
      </h2>
        {{markdown-to-html markdown=content.body}}

      {{#link-to 'section.edit' content.id class="btn btn-default"}}
        {{fa-icon "pencil"}}
      {{/link-to}}
    </div>

    {{outlet}}
  </div>
</div>

<div id="map-container">
  {{google-map
    lat=content.lat
    lng=content.long
    zoom=content.zoom
    gopt_mapTypeControl=false
    gopt_style=styles
    gopt_zoomControl=false
    gopt_backgroundColor='transparent'}}
</div>
